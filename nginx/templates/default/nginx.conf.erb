user <%= node[:nginx][:user] %>;
worker_processes <%= %x{grep -c processor /proc/cpuinfo}.strip.to_i %>;

error_log  <%= node[:nginx][:log_dir] %>/error.log;
pid        /var/run/nginx.pid;

events {
  worker_connections  <%= node[:nginx][:worker_connections] %>;
}

http {
  include       <%= node[:nginx][:dir] %>/mime.types;
  default_type  application/octet-stream;

  access_log	<%= node[:nginx][:log_dir] %>/access.log;

  sendfile on;
  tcp_nopush on;
  tcp_nodelay off;

  <% if node[:nginx][:keepalive] == "on" %>
    keepalive_timeout  <%= node[:nginx][:keepalive_timeout] %>;
  <% end %>

  <% Chef::Log.debug("NGINX ---> #{node[:nginx].inspect}") %>

  gzip  <%= node[:nginx][:gzip] %>;
  <% if node[:nginx][:gzip] == "on" %>
    gzip_http_version 1.1;
    gzip_vary on;
    gzip_comp_level 6;
    gzip_proxied any;
    gzip_types text/plain text/html text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
    gzip_buffers 16 8k;
    gzip_disable “MSIE [1-6].(?!.*SV1)”;
  <% end %>

  server_names_hash_bucket_size <%= node[:nginx][:server_names_hash_bucket_size] %>;

  include <%= node[:nginx][:dir] %>/conf.d/*.conf;
  include <%= node[:nginx][:dir] %>/sites-enabled/*;

  upstream unicorn {
    <% unicorn_worker = %x{grep -c processor /proc/cpuinfo}.strip.to_i * 2 %>
    <% unicorn_worker.times do |worker| %>
      server unix:/tmp/unicorn.<%= worker -%>.sock;
      server 127.0.0.1:<%= 4000 + worker -%>;
    <% end %>
  }
}
