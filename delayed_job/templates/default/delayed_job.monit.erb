check process delayed_job with pidfile <%= @deploy[:deploy_to] %>/current/tmp/pids/delayed_job.pid
  start program = "<%= @deploy[:deploy_to] %>/current/script/delayed_job -e <%= @deploy[:rails_env] %> start" as uid ubuntu and gid ubuntu
  stop program = "<%= @deploy[:deploy_to] %>/current/script/delayed_job -e <%= @deploy[:rails_env] %> stop" as uid ubuntu and gid ubuntu
  if mem is greater than 300.0 MB for 1 cycles then restart
  if cpu is greater than 50% for 2 cycles then alert
  if cpu is greater than 80% for 3 cycles then restart
  group background
