check process apn_sender_<%= @application %>
  with pidfile "<%= @current_path %>/tmp/pids/apn_sender.pid"
  start program = "/bin/su -c '/etc/init.d/apn_sender_<%= @application %> start' - deploy" with timeout 120 seconds
  stop program = "/bin/su -c '/etc/init.d/apn_sender_<%= @application %> stop' - deploy"
  if 5 restarts within 5 cycles then timeout
