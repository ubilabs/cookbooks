<% if @params[:server_name] == 'api.wynsh.com'%>
#redirect api.wynsh.com to https
<VirtualHost *:80>
  ServerName <%= @params[:server_name] %>

  DocumentRoot /var/www
  Redirect permanent / https://<%= @params[:server_name] %>/

  LogLevel info
  ErrorLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-error.log
  CustomLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-access.log combined
  CustomLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-ganglia.log ganglia

</VirtualHost>

#redirect my.wynsh.com to https
<VirtualHost *:80>
  ServerName my.wynsh.com 

  DocumentRoot /var/www
  Redirect permanent / https://my.wynsh.com/

  LogLevel info
  ErrorLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-error.log
  CustomLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-access.log combined
  CustomLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-ganglia.log ganglia

</VirtualHost>

#add mobile.wynsh.com with rewrites
<VirtualHost *:80>
  ServerName mobile.wynsh.com
  DocumentRoot <%= @params[:docroot] %>

  LogLevel info
  ErrorLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-error.log
  CustomLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-access.log combined

  RackEnv production
  RackBaseURI /

  Header always unset "X-Powered-By"
  Header always unset "X-Runtime"

  RewriteEngine on
  RewriteLogLevel 0
  RewriteRule ^/$ http://mobile.wynsh.com/campaign/welcome/ [R,L]

</VirtualHost>

<% else %>

#plain http for api.staging.wynsh.com and api.sales.wynsh.com
<VirtualHost *:80>
  ServerName <%= @params[:server_name] %>
  <% if @params[:server_aliases] && !@params[:server_aliases].empty? -%>
  ServerAlias <% @params[:server_aliases].each do |a| %><%= "#{a}" %> <% end %>
  <% end -%>

  <% if @params[:mounted_at] -%>
  DocumentRoot /var/www
  <%= @params[:deploy][:passenger_handler] -%>BaseURI <%= @params[:mounted_at] %>
  <% else -%>
  DocumentRoot <%= @params[:docroot] %>
  <%= @params[:deploy][:passenger_handler] -%>BaseURI /
  <% end -%>
  <%= @params[:deploy][:passenger_handler] -%>Env <%= @params[:rails_env] %>

  RailsEnv <%= @params[:rails_env] %>

  <Directory <%= @params[:docroot] %>>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>

  <Directory ~ "\.svn">
    Order allow,deny
    Deny from all
  </Directory>

  <Directory ~ "\.git">
    Order allow,deny
    Deny from all
  </Directory>

  <Location /system/images >
    ProxyPass http://s3.amazonaws.com/wynsh-<% @params[:rails_env] %>/tickets/
  </Location>

  <LocationMatch "^/api/tickes/redeem_ty_tan/(.+)">
    AuthType Basic
    AuthName "wynsh ticket redeem"
    AuthUserFile <%= @params[:redeem_auth_file] %>
    Require valid-user
  </LocationMatch>

  LogLevel info
  ErrorLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-ssl-error.log
  CustomLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-ssl-access.log combined
  CustomLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-ssl-ganglia.log ganglia

  RewriteEngine On
  RewriteLog <%= node[:apache][:log_dir] %>/<%= @application_name %>-ssl-rewrite.log
  RewriteLogLevel 0

  # Canonical host
  #RewriteCond %{HTTP_HOST}   !^<%= @params[:server_name] %> [NC]
  #RewriteCond %{HTTP_HOST}   !^$
  #RewriteRule ^/(.*)$        http://<%= @params[:server_name] %>/$1 [L,R=301]

  RewriteCond %{DOCUMENT_ROOT}/system/maintenance.html -f
  RewriteCond %{SCRIPT_FILENAME} !maintenance.html
  RewriteRule ^.*$ /system/maintenance.html [L]

</VirtualHost>
<% end -%>

# https if ssl_support is checked
